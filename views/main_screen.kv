<MainScreen>:

    MDScreen:
        md_bg_color: '#222234'

        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            MDSlider:
                id: slider
                range: (1, 50)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                MDSliderHandle:

            MDTextField:
                text: str(slider.value)
                halign: 'center'