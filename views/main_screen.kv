<MainScreen>:
    md_bg_color: '#222234'

    MDBoxLayout:
        orientation: 'vertical'

        MDRelativeLayout:
            MDGridLayout:
                cols: 2
                spacing: dp(30)
                padding: dp(30)
                adaptive_height: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                ValueField:
                    text: str(request_slider.value)
                    icon: 'transfer-up'
                    field: 'Requests'
                    hint: 'Number of requests.'

                ValueField:
                    text: str(delay_slider.value)
                    icon: 'timer-refresh'
                    field: 'Delay'
                    hint: 'Delay between requests.'

                MDSlider:
                    id: request_slider
                    range: (1, 50)
                    MDSliderHandle:

                MDSlider:
                    id: delay_slider
                    range: (1, 50)
                    MDSliderHandle:


<ValueField@MDTextField>:
    text: ''
    icon: ''
    field: ''
    hint: ''
    mode: 'outlined'
    halign: 'center'
    MDTextFieldHintText:
        text: root.field
    MDTextFieldHelperText:
        text: root.hint
        mode: 'persistent'
    MDTextFieldTrailingIcon:
        icon: root.icon