<MainScreen>:

    MDScreen:
        md_bg_color: '#222234'

        MDBoxLayout:
            orientation: 'vertical'
            theme_bg_color: 'Custom'
            md_bg_color: '#6A1B9A'

            MDRelativeLayout:
                MDGridLayout:
                    cols: 2
                    adaptive_height: True
                    spacing: dp(30)
                    padding: dp(30)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    theme_bg_color: 'Custom'
                    md_bg_color: '#FF4081'

                    ValueField:
                        text: str(slider_0.value)
                        icon: 'transfer-up'
                        field: 'Requests'
                        hint: 'Number of requests.'

                    ValueField:
                        text: str(slider_1.value)
                        icon: 'timer-refresh'
                        field: 'Delay'
                        hint: 'Delay between requests.'

                    MDSlider:
                        id: slider_0
                        range: (1, 50)
                        MDSliderHandle:

                    MDSlider:
                        id: slider_1
                        range: (1, 50)
                        MDSliderHandle:


<ValueField@MDTextField>:
    text: ''
    icon: ''
    field: ''
    hint: ''
    mode: 'outlined'
    MDTextFieldHintText:
        text: root.field
    MDTextFieldHelperText:
        text: root.hint
        mode: 'persistent'
    MDTextFieldTrailingIcon:
        icon: root.icon