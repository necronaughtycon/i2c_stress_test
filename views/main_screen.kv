<MainScreen>:

    MDScreen:
        md_bg_color: '#222234'

        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height: True
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            MDGridLayout:
                cols: 2
                spacing: dp(30)
                padding: dp(30)

                ValueField:
                    text: str(slider_0.value)
                    icon: 'transfer-up'
                    field: 'Requests'
                    hint: 'Number of requests.'

                ValueField:
                    text: str(slider_1.value)
                    icon: 'timer-refresh'
                    field: 'Delay'
                    hint: 'Delay between requests.'

                MDSlider:
                    id: slider_0
                    range: (1, 50)
                    MDSliderHandle:

                MDSlider:
                    id: slider_1
                    range: (1, 50)
                    MDSliderHandle:


<ValueField@MDTextField>:
    text: ''
    icon: ''
    field: ''
    hint: ''
    mode: 'outlined'
    MDTextFieldHintText:
        text: root.field
    MDTextFieldHelperText:
        text: root.hint
        mode: 'persistent'
    MDTextFieldTrailingIcon:
        icon: root.icon