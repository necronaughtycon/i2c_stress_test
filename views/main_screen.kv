<MainScreen>:

    MDScreen:
        md_bg_color: '#222234'

        MDBoxLayout:

            MDSlider:
                id: slider
                min: 0
                max: 50
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                MDSliderHandle:

            MDTextField:
                text: str(slider.value)
                halign: 'center'



