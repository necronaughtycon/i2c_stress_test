<MainScreen>:
    md_bg_color: '#222234'

    MDBoxLayout:
        orientation: 'vertical'

        MDRelativeLayout:
            MDGridLayout:
                cols: 2
                spacing: dp(42)
                padding: (dp(150), dp(0), dp(150), dp(0))
                adaptive_height: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                ValueField:
                    text: str(round(request_slider.value))
                    icon: 'transfer-up'
                    field: 'Requests'
                    
                MDSlider:
                    id: request_slider
                    range: (1, 1000)
                    MDSliderHandle:
                    MDSliderValueLabel:

                ValueField:
                    text: str(round(frequency_slider.value))
                    icon: 'timer-refresh'
                    field: 'Frequency'

                MDSlider:
                    id: frequency_slider
                    range: (1, 60)
                    MDSliderHandle:
                    MDSliderValueLabel:

                ValueField:
                    text: str(round(stored_slider.value))
                    icon: 'folder-download'
                    field: 'Stored'

                MDSlider:
                    id: stored_slider
                    range: (1, 500)
                    MDSliderHandle:
                    MDSliderValueLabel:

<ValueField@MDTextField>:
    text: ''
    icon: ''
    field: ''
    hint: ''
    mode: 'outlined'
    halign: 'center'
    size_hint_x: .3
    disabled: False
    theme_text_color: 'Custom'
    text_color_normal: '#F7F7F7'
    MDTextFieldHintText:
        text: root.field
    MDTextFieldHelperText:
        text: root.hint
        mode: 'persistent'
    MDTextFieldTrailingIcon:
        icon: root.icon